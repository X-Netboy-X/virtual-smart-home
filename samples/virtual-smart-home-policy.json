{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": ["iot:Connect"],
      "Resource": [
        "arn:aws:iot:eu-west-1:146271617960:client/${iot:Connection.Thing.ThingName}"
      ]
    },
    {
      "Effect": "Allow",
      "Action": ["iot:Publish"],
      "Resource": [
        "arn:aws:iot:eu-west-1:146271617960:topic/vsh/${iot:Connection.Thing.ThingName}/*",
        "arn:aws:iot:eu-west-1:146271617960:topic/$aws/things/${iot:Connection.Thing.ThingName}/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": ["iot:Subscribe"],
      "Resource": [
        "arn:aws:iot:eu-west-1:146271617960:topicfilter/$aws/things/${iot:Connection.Thing.ThingName}/*",
        "arn:aws:iot:eu-west-1:146271617960:topicfilter/vsh/${iot:Connection.Thing.ThingName}/*",
        "arn:aws:iot:eu-west-1:146271617960:topicfilter/vsh/version/*",
        "arn:aws:iot:eu-west-1:146271617960:topicfilter/vsh/ping",
        "arn:aws:iot:eu-west-1:146271617960:topicfilter/vsh/service"
      ]
    },
    {
      "Effect": "Allow",
      "Action": ["iot:Receive"],
      "Resource": [
        "arn:aws:iot:eu-west-1:146271617960:topic/$aws/things/${iot:Connection.Thing.ThingName}/*",
        "arn:aws:iot:eu-west-1:146271617960:topic/vsh/${iot:Connection.Thing.ThingName}/*",
        "arn:aws:iot:eu-west-1:146271617960:topic/vsh/version/*",
        "arn:aws:iot:eu-west-1:146271617960:topic/vsh/ping",
        "arn:aws:iot:eu-west-1:146271617960:topic/vsh/service"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "iot:GetThingShadow",
        "iot:UpdateThingShadow",
        "iot:DeleteThingShadow"
      ],
      "Resource": [
        "arn:aws:iot:eu-west-1:146271617960:thing/${iot:Connection.Thing.ThingName}*"
      ]
    }
  ]
}
